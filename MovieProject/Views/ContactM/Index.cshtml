@model Models.EF.Contact
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<style>

</style>

@section jsFooter{
    <script src="~/assets/web/js/controller/contactController.js"></script>


}
<br />
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6">
                <h2>THÔNG TIN LIÊN HỆ</h2>
                @Html.Raw(Model.Content)
                <br />
                <div class="all-comments">
                    <div class="all-comments-info">
                        <a href="#">Liên hệ chúng tôi</a>
                        <div class="agile-info-wthree-box">
                            <form>
                                <input type="text" id="txtName" placeholder="Tên bạn" >
                                <input type="text" id="txtMobile" placeholder="Số điện thoại" >
                                <input type="text" id="txtAddress" placeholder="Địa chỉ" >
                                <input type="text" id="txtEmail" placeholder="Email" >
                                <textarea placeholder="Yêu cầu" id="txtContent" ></textarea>
                                &nbsp;<input id="btnSend" type="button" value="Gửi đi">
                                <div class="clearfix"> </div>

                            </form>
                        </div>
                    </div>

                </div>
            </div>

            <div class="col-md-6">
                <h2 style="text-align:center">BẢN ĐỒ</h2>
                <div class="mapouter"><div class="gmap_canvas"><iframe class="gmap_iframe" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?width=700&amp;height=400&amp;hl=en&amp;q=khoa công nghệ thông tin - trường đại học ngoại ngữ&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"></iframe><a href="https://mcpedls.com/">Minecraft Download</a></div>
                <style>
                    .mapouter {
                        position: relative;
                        text-align: right;
                        width: 700px;
                        height: 400px;
                    }

                    .gmap_canvas {
                        overflow: hidden;
                        background: none !important;
                        width: 700px;
                        height: 400px;
                    }

                    .gmap_iframe {
                        width: 700px !important;
                        height: 500px !important;
                    }
                </style></div>

            </div>
        </div>

    </div>
</div>

